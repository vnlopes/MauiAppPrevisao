<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisao.Views.CadastroView"
             Title="Novo Cadastro">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Crie sua conta" FontSize="24" HorizontalOptions="Center"/>

        <Entry x:Name="txtNome" Placeholder="Nome Completo"/>

        <Label Text="Data de Nascimento:"/>
        <DatePicker x:Name="dtpNascimento" Format="dd/MM/yyyy"/>

        <Entry x:Name="txtEmail" Placeholder="E-mail" Keyboard="Email"/>
        <Entry x:Name="txtSenha" Placeholder="Senha" IsPassword="True"/>

        <Button Text="CADASTRAR" Clicked="BtnSalvar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>