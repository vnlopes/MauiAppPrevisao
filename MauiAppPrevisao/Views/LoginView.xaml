<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisao.Views.LoginView"
             Title="Login"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="WhiteSmoke">

    <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="15">
        <Label Text="Bem-vindo ao ClimaApp" FontSize="28" HorizontalOptions="Center" TextColor="Black"/>

        <Entry x:Name="txtEmail" TextColor="Black" PlaceholderColor="#555555" Placeholder="Digite seu e-mail" Keyboard="Email"/>
        <Entry x:Name="txtSenha" TextColor="Black" PlaceholderColor="#555555" Placeholder="Digite sua senha" IsPassword="True"/>

        <Button Text="ENTRAR" Clicked="BtnLogin_Clicked" BackgroundColor="#007ACC" TextColor="White"/>

        <Label Text="NÃ£o tem conta? Cadastre-se" 
               TextColor="Blue" 
               HorizontalOptions="Center"
               TextDecorations="Underline">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapCadastrar_Tapped"/>
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>