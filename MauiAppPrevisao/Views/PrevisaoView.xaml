<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisao.Views.PrevisaoView"
             Title="Previsão do Tempo">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Consultar Clima" FontSize="22" HorizontalOptions="Center"/>

        <Entry x:Name="txtCidade" Placeholder="Digite o nome da cidade"/>

        <Button Text="BUSCAR PREVISÃO" Clicked="BtnBuscar_Clicked"/>

        <Frame BackgroundColor="#E0F7FA" Padding="15" Margin="0,20,0,0" IsVisible="False" x:Name="frameResultado">
            <VerticalStackLayout>
                <Label Text="Resultado:" FontAttributes="Bold"/>
                <Label x:Name="lblResultado" FontSize="18" TextColor="#006064"/>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Ver Histórico" 
                BackgroundColor="Gray" 
                Margin="0,30,0,0" 
                Clicked="BtnHistorico_Clicked"/>

    </VerticalStackLayout>
</ContentPage>